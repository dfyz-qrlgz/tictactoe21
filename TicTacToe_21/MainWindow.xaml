<Window x:Class="TicTacToe_21.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tic Tac Toe" Height="450" Width="450">
    <Grid>
        <UniformGrid Rows="3" Columns="3" Name="gameBoard" IsEnabled="False">
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
            <Button Click="Button_Click"/>
        </UniformGrid>
        <Button Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0" Click="NewGame_Click"/>
        <Label x:Name="resultLabel" Content="" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
    </Grid>
</Window>
